{
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    },
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es5",
        "lib": ["es2017", "dom"],
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@uap/auth": ["libs/auth/src/index.ts"],
            "@uap/backend": ["libs/backend/src/index.ts"],
            "@uap/products/components": ["libs/products/components/src/index.ts"],
            "@uap/products/models": ["libs/products/models/src/index.ts"],
            "@uap/products/state": ["libs/products/state/src/index.ts"],
            "@uap/state": ["libs/state/src/index.ts"],
            "@uap/utils": ["libs/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
